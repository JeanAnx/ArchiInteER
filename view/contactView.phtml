<form action="submit.php" method="post" onsubmit="return checkForm()">

			<fieldset>

				<legend>Infos personnelles</legend>

				<ul>
				
					<li>

						<label for="civilite">Civilité : </label>
						<select id="civilite">
							<option>Mme</option>
							<option>M.</option>
						</select>

					</li>

					<li>

						<label for="prenom">Prénom : </label>
						<input type="text" name="prenom" id="prenom" onblur="checkPrenom(this)">
						<span class="champErreur" id="erreurPrenom"></span>

					</li>

					<li>

						<label for="nom">Nom : </label>
						<input type="text" name="nom" id="nom" onblur="checkNom(this)">
						<span class="champErreur" id="erreurNom"></span>
					
					</li>

					<li>
						
						<label for="date">Date de naissance : </label>
						<input type="date" name="date" id="date" onblur="checkDate(this)">
						<span class="champErreur" id="erreurDate"></span>


					</li>

					<li>

						<label for="adresse">Adresse : </label>
						<input type="text" name="adresse" id="adresse" onblur="checkAddress(this)">
						<span class="champErreur" id="erreurAdresse"></span>


					</li>

					<li>
						<label for="codePostal">Code postal : </label>
						<input type="text" name="codePostal" id="codePostal" onblur="checkPostalCode(this)">
						<span class="champErreur" id="erreurCodePostal"></span>

					</li>

					<li>

						<label for="ville">Ville : </label>
						<input type="text" name="ville" id="ville">
						<span class="champErreur" id="erreurVille"></span>


					</li>


					<li>

						<label for="phone">Téléphone (sans espaces) : </label>
						<input type="text" name="phone" id="phone">
						<span class="champErreur" id="erreurVille"></span>


					</li>


				</ul>



			</fieldset>

			<fieldset>

				<legend>Infos de connexion</legend>

					<ul>

						<li>
							<label for="pseudo">Pseudo : </label>
							<input type="text" name="pseudo" id="pseudo">
						</li>

						<li>
							<label for="password">Mot de passe : </label>
							<input type="text" name="password" id="password">
						</li>

						<li>
							
							<input class="buttons" type="button" value="Envoyer" onclick="checkForm()"></input>

							<input class="buttons" type="reset"></input>


						</li>

					</ul>



			</fieldset>


		</form>