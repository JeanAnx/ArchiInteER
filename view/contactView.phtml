						<span class="champErreur" id="erreurVille"></span>


					</li>


				</ul>



			</fieldset>

			<fieldset>

				<legend>Votre message :</legend>

					<ul>
						<li>
							<label for="objet">Objet : </label>
							<input type="text" name="objet" id="objet">
						</li>
						<li>
							<label for="objet">Message : </label>
							<textarea name="objet" id="objet" cols="40" rows="10"></textarea>
						</li>
						<li>
							<input class="buttons" type="button" value="Envoyer" onclick="checkForm()">
